<h2><%= t(".edit_user") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i> <%= t(".password_notification") %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t ".password_length", length: @minimum_password_length %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label t(".password_confirm") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t(".current_password") %> <i><%= t(".current_password_notification") %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t(".btn_update"), class:"btn btn-primary" %>
  </div>
<% end %>

<h3 class="mt-3"><%= t".cancel_accont"%></h3>

<p><%=t".unhappy"%>? <%= button_to t(".btn_cancel"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></p>

<%= link_to t(".link_back"), :back %>

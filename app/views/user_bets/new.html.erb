<% provide :title, t(".bet") %>
<div class="row">
  <aside class="col-md-6">
    <%= render partial: "bets/bet_infor", locals: {bet: @bet} %>
  </aside>
  <div class="col-md-6 mt-3">
    <%= form_for @user_bet, method: :post do |f| %>
      <%= f.label :amount, class: "mt-3 fs-3" %>
      <%= f.number_field :amount, class: "form-control mt-3" %>

      <%= f.hidden_field :bet_id, value: params[:id] %>
      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit t(".bet"), class: "btn btn-primary btn-form" %>
    <% end %>
  </div>
</div>
